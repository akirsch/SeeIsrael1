<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/tablet_landscape_card_width"
    android:layout_height="@dimen/tablet_landscape_card_height"
    android:layout_margin="@dimen/small_view_margin"
    android:clickable="true"
    android:elevation="2dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/town_image_view"
            android:contentDescription="@string/location_image_content_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/town_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tel Aviv"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:fontFamily="@font/roboto"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/standard_view_margin"
            android:layout_marginBottom="@dimen/card_view_title_bottom_margin"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>